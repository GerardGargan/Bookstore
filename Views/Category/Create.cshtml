@model Category

<form method="POST">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
            <div class="mb-3 row p-1">
                <label asp-for="Name" class="form-label p-0"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger p-0"></span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="DisplayOrder" class="form-label p-0">Display Order</label>
                <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger p-0"></span>
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="Submit" class="btn btn-primary form-control">Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to list</a>
                </div>
            </div>
    </div>
</form>
@model Category

<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Delete Category</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="POST">
            <input asp-for="Id" type="hidden" />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" disabled class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" disabled class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="Submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to list</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


